#!/bin/sh

indent() {
  sed -u 's/^/       /'
}

echo "-----> building"

export BUILD_DIR=$1
bp_dir=$(cd $(dirname $0); cd ..; pwd)

export GEM_HOME=$bp_dir/vendor/gems
export GEM_PATH=$bp_dir/vendor/gems

echo "---> Install bundler"
gem install 'bundler'

echo "---> Install gems"
bundler install

$1/bin/routes
